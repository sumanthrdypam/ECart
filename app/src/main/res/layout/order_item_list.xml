<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_margin="10dp"
    android:padding="12dp">

    <!-- Order ID and Date (aligned horizontally) -->
    <TextView
        android:id="@+id/order_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order #1"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/indigo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/order_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2022-01-16"
        android:textSize="12sp"
        android:textColor="@color/red_for_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Address Title and Full Address -->
    <TextView
        android:id="@+id/address_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/violet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_id"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="B4, Prabha Anand Sankul, Stadium Road, Nashik - 422101"
        android:textSize="12sp"
        android:textColor="@color/violet100"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/address_title"
        android:layout_marginTop="4dp" />

    <!-- Bill Amount and Payment Method (aligned horizontally) -->
    <TextView
        android:id="@+id/bill_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â‚¹1695"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/green_for_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/address"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/payment_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COD"
        android:textSize="12sp"
        android:textColor="@color/primary_accent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/address"
        android:layout_marginTop="8dp" />

    <!-- Order Status -->
    <TextView
        android:id="@+id/order_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RECEIVED"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="@color/status_received"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/payment_method"
        android:layout_marginTop="4dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
